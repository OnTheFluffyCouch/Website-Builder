<!DOCTYPE html>
<html>
  <head>
    <title>On the Fluffy Couch</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <%= render partial: 'layouts/shared/header' %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <%= render partial: 'layouts/shared/navbar' %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-2">
          <%= render partial: 'layouts/shared/twitter'%>
        </div>
        <div class="col-md-10">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
